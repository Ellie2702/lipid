{
    "name": "agorlov/ObjectMVC",
    "description": "PHP Object MVC micro framework for web apps",
    "type": "library",
    "license": "free",
    "authors": [
        {
            "name": "Alexandr Gorlov",
            "email": "a.gorlov@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/agorlov/ObjectMVC/issues"
    },    
    "require": {
        "php": ">= 7.1",
        "twig/twig": "^2.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4",
        "phpunit/phpunit": "^8"
    },

    "autoload": {
        "classmap": [
            "src/",
            "example/"
        ],
        "__comment:psr-4": {
            "ExampleApp\\": "./"
        }
    },
    "scripts": {
        "example" : [
            "php -S localhost:8000 -t example/"
        ],
        "phpcs": [
            "phpcs --standard=PSR2 --colors --ignore=example/cache/ src/ example/"
        ],
        "phpcs-fix": [
            "phpcbf --standard=PSR2 --ignore=example/cache/ src/ example/ "
        ],
        "test": [
            "vendor/bin/phpunit --bootstrap ./tests/bootstrap.php --testdox --color -v tests/"
        ]
    }    
}
